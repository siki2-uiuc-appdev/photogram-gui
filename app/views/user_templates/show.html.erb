<h1><%= @the_user.username %></h1>

<dl>
  <dt>ID</dt>
  <dd><%= @the_user.id%></dd>

  <dt>Edit user</dt>

  <form action="/update_user/<%= @the_user.username %>">
    <label for="edit_user">Username</label>
    <input id="edit_user" type="text" name="query_user" value="<%= @the_user.username%>">
    <button>Update user</button>
  </form>

</dl>

<h2> Own photos (<%= @the_user.own_photos.count %>)</h2>

<table border="1">
  <tr>
    <th>Image</th>
    <th>Owner</th>
    <th>Caption</th>
    <th>Posted</th>
    <th></th>
  </tr>

  <%@the_user.own_photos.each do |a_photo|  %>
  <tr>
    <td>
    <img src="<%= a_photo.image %>" alt="user photo">
    </td>
    <td>
    <%= a_photo.poster.username %>
    </td>
    <td><%= a_photo.caption%></td>
    <td><%= a_photo.created_at %></td>
    <td><a href="/photos/<%= a_photo.id %>">Show details</a></td>
  </tr>
  <% end%>
</table>
